<?xml version="1.0" encoding="utf-8"?>
<!--
  ✅ FIX SPLASH DÉFORMÉ : Ce fichier remplace le splash drawable.
  Il utilise l'image ic_launcher.png du dossier mipmap (pas drawable),
  centrée sans déformation, sur fond sombre.

  À placer dans : android/app/src/main/res/drawable/splash.xml
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fond sombre identique à l'app -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0a0e1a"/>
        </shape>
    </item>

    <!-- ✅ Logo centré depuis mipmap, sans étirement -->
    <item
        android:gravity="center"
        android:width="180dp"
        android:height="180dp">
        <bitmap
            android:src="@mipmap/ic_launcher"
            android:gravity="center"
            android:tileMode="disabled"/>
    </item>

</layer-list>